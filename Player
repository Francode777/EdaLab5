
public class Player {
    private String playerName;
    private int wins = 0;
    private int draws = 0;
    private int losses = 0;

    Player(String playerName) {
        this.playerName = playerName;
        this.wins = wins;
        this.draws = draws;
        this.losses = losses;
    }
    Player(){}

    public String getPlayerName() {
        return playerName;
    }
    public int getWins() {
        return wins;
    }
    public int getDraws() {
        return draws;
    }
    public int getLosses() {
        return losses;
    }

    public void addWin(){
        wins++;
    }
    public void addDraw(){
        draws++;
    }
    public void addLoss(){
        losses++;
    }

    public float winRate(){
        float numberOfGames = wins + draws + losses;
        if (numberOfGames != 0) {
            return (wins / numberOfGames) * 100;
        }
        return 0;
    }



}

