
public class Player {
    private String playerName;
    private int wins = 0;
    private int draws = 0;
    private int losses = 0;

    Player(String playerName, int wins, int draws, int losses) {
        this.playerName = playerName;
        this.wins = wins;
        this.draws = draws;
        this.losses = losses;
    }
    Player(){}

    public void addWin(){
        wins++;
    }
    public void addDraw(){
        draws++;
    }
    public void addLoss(){
        losses++;
    }

    public float winRate(){
        float numberOfGames = wins + draws + losses;
        if (numberOfGames != 0) {
            return (wins / numberOfGames) * 100;
        }
        return 0;
    }


}
